[include]
  # For username / creds / etc
  path = ~/.gitconfig.local
[color]
	ui = true
[core]
	editor = /usr/local/bin/nvim
	excludesfile = ~/.gitignore_global
[help]
  autocorrect = 1
[push]
  default = current
[alias]
  co             = "!source ~/.githelpers && fzf_branch"
  dbm            = "!source ~/.githelpers && delete_local_merged_master_branches"
  dbd            = "!source ~/.githelpers && delete_local_merged_develop_branches"
  bamr           = "!source ~/.githelpers && delete_remote_merged_branches"
  today          = "log --since=midnight --oneline --author='Victor Asteinza'"
  today-all      = "log --since=midnight --pretty=short"
  yesterday      = "log --since=yesterday.midnight --until=midnight --oneline --author='Victor Asteinza'"
  yesterday-all  = "log --since=yesterday.midnight --until=midnight --pretty=short"
  merges         = "log --merges --since=yesterday.midnight --oneline"
  ctags          = !.git/hooks/ctags
[pull]
  ff = only
[filter "lfs"]
  smudge = git-lfs smudge %f
  required = true
  clean = git-lfs clean %f
[init]
  templatedir = ~/.git_template
